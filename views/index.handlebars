<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Burgatory</h1>
        </div>

        <div class="col-md-7">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{>burgers/burger-block devoured=false}}
                        <button class="cancel-burger" data-id="{{this.id}}">Cancel Order!</button>
                    {{/unless}}
                    
                {{/each}}
            </ul>
        </div>
        <div class="col-md-5">

        <h3>Burger's Devoured</h3>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-12">
            <p>Complete your order below.  Enter the description for each item.  Then press submit.</p>
            <form class="create-form">
                <div class="form-group">
                    <input type="text" id="burg" name="burger_name">
                </div>
                <button type="submit">Place Your Order</button>
            </form>
        </div>
    </div>
</div>
